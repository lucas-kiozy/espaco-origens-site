---
// src/layouts/Layout.astro
interface Props {
  title?: string;
  description?: string;
}

// IMPORTA o CSS global -> garante Tailwind + tokens em TODAS as páginas
import '../styles/global.css';

const { title = 'espaço origens', description = '' } = Astro.props;

// helper para favicon em subpasta do GitHub Pages
const base = import.meta.env.BASE_URL || '/';
const fav = (base.endsWith('/') ? base : base + '/') + 'favicon.ico';
---

<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#B75E3C" />
    <link rel="icon" href={fav} />
  </head>
  <body class="min-h-dvh bg-creme text-marrom antialiased">
    <slot />
  </body>
</html>
