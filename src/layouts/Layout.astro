---
/**
 * Layout.astro — base de todas as páginas
 * Garante que o Tailwind (global.css) seja carregado em TODAS as rotas.
 */
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const { title = "espaço origens", description = "" } = Astro.props as Props;
---

<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <meta name="theme-color" content="#B75E3C" />
    <!-- favicon com base correta -->
    <link rel="icon" href={`${import.meta.env.BASE_URL.replace(/\/?$/, '/') }favicon.svg`} />
    <base href={import.meta.env.BASE_URL} />
  </head>
  <body class="min-h-dvh bg-creme text-marrom antialiased">
    <slot />
  </body>
</html>
