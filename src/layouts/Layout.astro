---
// src/layouts/Layout.astro
interface Props {
  title?: string;
  description?: string;
}

const { title = 'espa√ßo origens', description = '' } = Astro.props;

// importa o CSS global como URL processada pelo Vite/Astro
import globalCss from '../styles/global.css?url';

const base = import.meta.env.BASE_URL || '/';
const fav = (base.endsWith('/') ? base : base + '/') + 'favicon.ico';
---

<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#B75E3C" />
    <link rel="icon" href={fav} />

    <!-- CSS global garantido no bundle -->
    <link rel="stylesheet" href={globalCss} />
  </head>

  <body class="min-h-dvh bg-creme text-marrom antialiased">
    <slot />
  </body>
</html>
