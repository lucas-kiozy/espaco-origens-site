---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}
const { title = "espa√ßo origens", description = "" } = Astro.props as Props;
---

<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <meta name="theme-color" content="#B75E3C" />

    <link rel="icon" href={`${import.meta.env.BASE_URL.replace(/\/?$/, '/') }favicon.png`} />
    <base href={import.meta.env.BASE_URL} />

    <!-- carrega env.js sem document.write -->
    <script is:inline>
      (function () {
        var base = document.querySelector('base')?.getAttribute('href') || '/';
        if (!base.endsWith('/')) base += '/';
        var s = document.createElement('script');
        s.src = base + 'env.js';
        s.defer = true;
        document.head.appendChild(s);
      })();
    </script>
  </head>
  <body class="min-h-dvh bg-creme text-marrom antialiased">
    <slot />
  </body>
</html>
