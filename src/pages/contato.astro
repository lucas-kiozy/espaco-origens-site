---
/**
 * Página de Contato — Espaço Origens
 * - Integração com Instagram (iframe)
 * - Mapa do Google ajustado para metade da tela em desktop
 * - Bloco de contato com WhatsApp e Email
 * - Compatível com GitHub Pages (BASE_URL para assets se necessário)
 */

import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/ui/Button.astro';

// Função auxiliar para prefixar base no GitHub Pages
const asset = (path: string) => `${import.meta.env.BASE_URL}${path.replace(/^\/+/, '')}`;

const meta = {
  title: 'contato - espaço origens',
  description: 'Entre em contato com o ateliê espaço origens — siga no Instagram, fale no WhatsApp ou envie um e-mail.',
  siteUrl: 'https://lucas-kiozy.github.io/espaco-origens-site',
};
---

<Layout title={meta.title} description={meta.description}>
  <Header />

  <main class="max-w-6xl mx-auto px-4 py-12 space-y-12">
    <!-- Instagram -->
    <section>
      <h2 class="text-2xl lowercase text-marrom mb-4">siga nosso trabalho no instagram</h2>
      <div class="overflow-hidden rounded-2xl border border-areia/70 shadow-sm">
        <iframe
          src="https://snapwidget.com/embed/1045465"
          class="w-full h-[400px]"
          allowtransparency="true"
          frameborder="0"
          scrolling="no"
        ></iframe>
      </div>
    </section>

    <!-- Mapa + Contatos lado a lado -->
    <section class="grid md:grid-cols-2 gap-8 items-start">
      <!-- Contatos -->
      <div class="space-y-6">
        <div>
          <h3 class="text-xl lowercase text-marrom mb-2">fale com a gente</h3>
          <div class="flex items-center gap-3">
            <img src={asset('/images/icons/whatsapp.svg')} alt="WhatsApp" class="w-6 h-6" />
            <a href="https://wa.me/5521981869391" target="_blank" rel="noopener" class="text-terracota hover:underline">
              WhatsApp
            </a>
          </div>
          <div class="flex items-center gap-3 mt-2">
            <img src={asset('/images/icons/email.svg')} alt="E-mail" class="w-6 h-6" />
            <a href="mailto:contato.espaco.origens@gmail.com" class="text-terracota hover:underline">
              contato.espaco.origens@gmail.com
            </a>
          </div>
        </div>
      </div>

      <!-- Mapa -->
      <div class="h-[300px] md:h-[400px] rounded-2xl overflow-hidden border border-areia/70 shadow-sm">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3675.212391808859!2d-43.09445292462446!3d-22.893741937718315!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x999b7bf6b4f4fd%3A0x2b9c7a02d84f86b6!2sCEP%2024110-050!5e0!3m2!1spt-BR!2sbr!4v1691765836038!5m2!1spt-BR!2sbr&z=15"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
            